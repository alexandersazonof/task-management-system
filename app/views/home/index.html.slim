- if !user_signed_in?
  h1 class="text-center" Some content
  = link_to 'Sign in', new_user_session_path, class: 'btn btn-primary'
  = link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary'
- else
  h1 class="text-center" My tasks
  = link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-primary'

  div class="container my-5"
    div id="tasks"
    <ul class="list-group">
      div
        - @tasks.each do |task|
          = render 'home/list', task: task
      div id="new-task"
    </ul>
    div class="row my-5"
      div class="col-md-10"
        input type="text" class="form-control" id="InputTask"
      div class="col-md-2"
        = link_to 'Add task', tasks_path, method: :post, class: 'btn btn-secondary', id: 'AddButton', remote: true
